---
const navItems = [
  { name: 'Home', path: '/' },
  { name: 'About Us', path: '/about' },
  { name: 'Products', path: '/product' },
  { name: 'Customers', path: '/customer' },
  { name: 'Contact', path: '/contact' },
];

const legalLinks = [
  { name: 'Privacy Policy', path: '/pnp' },
  { name: 'Terms & Condition', path: '/tnc' },
  { name: 'Disclaimer', path: '/disclaimer' },
];
---

<footer class="w-full bg-primary-1 text-white font-inter">
  <div class="max-w-[1440px] mx-auto px-6 md:px-8 lg:px-12 py-8 md:py-10">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-8 md:gap-12">
      <!-- Company Info - Left Section -->
      <div class="md:col-span-4">
        <div class="flex items-center gap-3 mb-6">
          <img src="/Footer_Logo.png" alt="Logo" class="h-10 w-10" />
          <h3 class="text-h3 md:text-mobile-h3 font-bold">PT GLOBAL NIAGA SAKTI</h3>
        </div>
        
        <address class="text-body4 md:text-mobile-body4 leading-relaxed not-italic mb-6">
          Gedung Wirausaha Lantai 1, Unit 104<br />
          Jl. HR. Rasuna Said Kav. C5<br />
          Kuningan, Setiabudi<br />
          Jakarta Selatan 12920
        </address>

        <p class="text-body4 md:text-mobile-body4 text-white/90">
          PT Global Niaga Sakti Â© 2025 All Rights Reserved.
        </p>
      </div>

      <!-- Navigation - Middle Section -->
      <div class="md:col-span-3 flex flex-col gap-3 pt-1">
        {navItems.map(item => (
          <a 
            href={item.path} 
            class="text-body4 md:text-mobile-body4 hover:text-primary-2 transition-colors"
          >
            {item.name}
          </a>
        ))}
      </div>

      <!-- Contact Info - Right Section -->
      <div class="md:col-span-5">
        <h4 class="text-h4 md:text-mobile-h4 font-bold underline mb-5">
          Contact Us
        </h4>
        
        <div class="flex flex-col gap-4 text-body4 md:text-mobile-body4 mb-6">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 mt-1 shrink-0" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.01 15.38c-1.23 0-2.42-.2-3.53-.56a.977.977 0 00-1.01.24l-1.57 1.97c-2.83-1.35-5.48-3.9-6.89-6.83l1.95-1.66c.27-.28.35-.67.24-1.02-.37-1.11-.56-2.3-.56-3.53 0-.54-.45-.99-.99-.99H4.19C3.65 3 3 3.24 3 3.99 3 13.28 10.73 21 20.01 21c.71 0 .99-.63.99-1.18v-3.45c0-.54-.45-.99-.99-.99z"/>
            </svg>
            <div class="flex flex-col gap-1">
              <div>Call Center : 021-5099 6969 (ext. 1249)</div>
              <div>Whatsapp : 0811-999-0991 (Chat Only)</div>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 shrink-0" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
            </svg>
            <span>sales@globalsakti.com</span>
          </div>
        </div>

        <!-- Legal Links -->
        <div class="flex flex-wrap gap-x-4 gap-y-2 text-body4 md:text-mobile-body4">
          {legalLinks.map((link, index) => (
            <>
              <a 
                href={link.path} 
                class="underline hover:text-primary-2 transition-colors"
              >
                {link.name}
              </a>
              {index < legalLinks.length - 1 && (
                <span class="text-white/50">|</span>
              )}
            </>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>