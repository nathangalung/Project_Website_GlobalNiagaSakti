---
const navItems = [
  { path: '/', name: 'Home', position: '43%' },
  { path: '/about', name: 'About Us', position: '51%' },
  { path: '/product', name: 'Products', position: '60%' },
  { path: '/customer', name: 'Customers', position: '69%' },
  { path: '/contact', name: 'Contact', position: '78%' },
];
---

<header class="w-full h-[100px] relative overflow-hidden font-inter">
  <!-- Background containers -->
  <div class="absolute inset-0">
    <!-- White section -->
    <div class="absolute top-0 left-0 h-full w-[42%]">
      <div class="absolute inset-0 bg-white"></div>
      <!-- Reversed trapezoid -->
      <div class="absolute top-0 right-[-80px] h-full w-[160px] bg-white transform origin-top-right -skew-x-[20deg]"></div>
      <div class="absolute bottom-0 left-0 w-full h-[2px] bg-primary-1"></div>
    </div>
    <!-- Primary-1 section -->
    <div class="absolute top-0 right-0 h-full w-[58%] bg-primary-1">
      <div class="absolute top-0 left-[-80px] h-full w-[160px] bg-primary-1 transform origin-top-left skew-x-[20deg]"></div>
    </div>
  </div>

  <!-- Main content container -->
  <div class="max-w-[1440px] h-full mx-auto relative px-4">
    <!-- Logo and company name -->
    <div class="absolute left-[4%] top-1/2 -translate-y-1/2 flex items-center z-20">
      <img 
        src="/images/logo/Color.png" 
        alt="Company Logo" 
        class="h-14 w-auto mr-3"
      />
      <h1 class="text-h3 md:text-mobile-h3 text-primary-1 font-bold whitespace-nowrap">
        PT GLOBAL NIAGA SAKTI
      </h1>
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden lg:block h-full">
      {navItems.map(item => (
        <a 
          href={item.path} 
          class="absolute top-1/2 -translate-y-1/2 text-body3 md:text-mobile-body3 text-white hover:text-primary-2 transition-colors whitespace-nowrap z-20"
          style={`left: ${item.position}`}
        >
          {item.name}
        </a>
      ))}

      <!-- Language Selector -->
      <div 
        class="absolute top-1/2 -translate-y-1/2 z-30" 
        style="right: 4%"
        id="languageSelector"
      >
        <button 
          class="h-[40px] px-4 bg-white rounded-md flex items-center gap-2 text-body3 md:text-mobile-body3 text-primary-1"
          id="languageButton"
        >
          <span id="selectedLang">EN</span>
          <svg 
            class="w-5 h-5 transition-transform"
            id="langArrow"
            viewBox="0 0 24 24" 
            fill="none" 
            stroke="currentColor"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M19 9l-7 7-7-7"
            />
          </svg>
        </button>

        <!-- Dropdown menu -->
        <div 
          class="absolute right-0 mt-2 w-[180px] hidden"
          id="langDropdown"
        >
          <div class="bg-primary-2 rounded-lg shadow-lg overflow-hidden">
            <button 
              class="w-full px-4 py-2.5 text-left text-body4 md:text-mobile-body4 text-white hover:bg-primary-1/80 transition-colors"
              data-lang="ID"
            >
              Bahasa Indonesia
            </button>
            <div class="w-full h-[1px] bg-white/10"></div>
            <button 
              class="w-full px-4 py-2.5 text-left text-body4 md:text-mobile-body4 text-white hover:bg-primary-1/80 transition-colors"
              data-lang="EN"
            >
              English
            </button>
          </div>
        </div>
      </div>
    </nav>

    <!-- Mobile Navigation Button -->
    <button 
      class="lg:hidden absolute right-4 top-1/2 -translate-y-1/2 p-2 rounded-lg bg-primary-1 text-white z-20"
      id="mobileMenuButton"
      aria-label="Toggle menu"
    >
      <svg 
        class="w-6 h-6" 
        fill="none" 
        stroke="currentColor" 
        viewBox="0 0 24 24"
      >
        <path 
          stroke-linecap="round" 
          stroke-linejoin="round" 
          stroke-width="2" 
          d="M4 6h16M4 12h16M4 18h16"
        />
      </svg>
    </button>

    <!-- Mobile Menu -->
    <div 
      class="lg:hidden fixed inset-0 bg-primary-1 z-50 hidden"
      id="mobileMenu"
    >
      <div class="flex flex-col items-center justify-center h-full">
        {navItems.map(item => (
          <a 
            href={item.path} 
            class="text-body3 md:text-mobile-body3 text-white hover:text-primary-2 transition-colors py-4"
          >
            {item.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</header>

<script>
  // Language selector functionality
  const languageButton = document.getElementById('languageButton');
  const langDropdown = document.getElementById('langDropdown');
  const selectedLang = document.getElementById('selectedLang');
  const langArrow = document.getElementById('langArrow');
  const langButtons = document.querySelectorAll('[data-lang]');

  let isOpen = false;

  languageButton?.addEventListener('click', (e) => {
    e.stopPropagation();
    isOpen = !isOpen;
    langDropdown?.classList.toggle('hidden', !isOpen);
    langArrow?.classList.toggle('rotate-180', isOpen);
  });

  langButtons.forEach(button => {
    button.addEventListener('click', (e) => {
      e.stopPropagation();
      const lang = (e.currentTarget as HTMLButtonElement).dataset.lang;
      if (selectedLang) selectedLang.textContent = lang;
      isOpen = false;
      langDropdown?.classList.add('hidden');
      langArrow?.classList.remove('rotate-180');
    });
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', () => {
    if (isOpen) {
      isOpen = false;
      langDropdown?.classList.add('hidden');
      langArrow?.classList.remove('rotate-180');
    }
  });

  // Mobile menu functionality
  const mobileMenuButton = document.getElementById('mobileMenuButton');
  const mobileMenu = document.getElementById('mobileMenu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>