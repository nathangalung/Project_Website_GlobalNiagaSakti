---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: "eager" | "lazy";
}

const { src, alt, width, height, class: className, loading = "lazy" } = Astro.props;
---

<img
  src={src}
  alt={alt}
  width={width}
  height={height}
  class={className}
  loading={loading}
  decoding="async"
  style="image-rendering: -webkit-optimize-contrast; image-rendering: crisp-edges;"
/>