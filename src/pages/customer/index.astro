---
import Layout from '../../layouts/Layout.astro';

const customers = [
  [
    { name: 'ISNA AGUNG PERMATA', logo: '/src/assets/customer/IAP.png', colSpan: 1 },
    { name: 'KAS Shipping', logo: '/src/assets/customer/KAS.png', colSpan: 1 }
  ],
  [
    { name: 'PELITA GLOBAL LOGISTIK', logo: '/src/assets/customer/Pelita.png', colSpan: 1 },
    { name: 'IMC Ship Management', logo: '/src/assets/customer/IMC.png', colSpan: 1 },
    { name: 'SPN', logo: '/src/assets/customer/SPN.png', colSpan: 1 }
  ],
  [
    { name: 'KASEN', logo: '/src/assets/customer/KASEN.png', colSpan: 1 },
    { name: 'Niterra Mobility Indonesia', logo: '/src/assets/customer/Niterra.png', colSpan: 1 }
  ]
];
---

<Layout title="Our Customers - PT Global Niaga Sakti" description="Trusted partners of PT Global Niaga Sakti">
  <div class="min-h-[calc(100vh-396px)] bg-white py-12">
    <div class="max-w-[1200px] mx-auto px-6 md:px-8">
      <!-- Heading -->
      <h1 class="text-[32px] md:text-h4 font-bold text-primary-1 text-center max-w-[800px] mx-auto mb-12">
        Trusted by industry leaders across marine logistics, manufacturing, and beyond, our customers are at the heart of everything we do.
      </h1>

      <!-- Customer Logos Grid -->
      <div class="flex flex-col gap-4 max-w-[1000px] mx-auto">
        <!-- First Row - 2 columns -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:px-[150px]">
          {customers[0].map(customer => (
            <div class="bg-white border border-primary-1 rounded-lg p-6 flex items-center justify-center hover:border-primary-1/70 transition-colors h-[120px] w-full">
              <img 
                src={customer.logo} 
                alt={customer.name}
                class="max-w-[180px] max-h-[50px] object-contain"
              />
            </div>
          ))}
        </div>

        <!-- Second Row - 3 columns -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          {customers[1].map(customer => (
            <div class="bg-white border border-primary-1 rounded-lg p-6 flex items-center justify-center hover:border-primary-1/70 transition-colors h-[120px] w-full">
              <img 
                src={customer.logo} 
                alt={customer.name}
                class="max-w-[180px] max-h-[50px] object-contain"
              />
            </div>
          ))}
        </div>

        <!-- Third Row - 2 columns -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:px-[150px]">
          {customers[2].map(customer => (
            <div class="bg-white border border-primary-1 rounded-lg p-6 flex items-center justify-center hover:border-primary-1/70 transition-colors h-[120px] w-full">
              <img 
                src={customer.logo} 
                alt={customer.name}
                class="max-w-[180px] max-h-[50px] object-contain"
              />
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  img {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }

  @media (max-width: 768px) {
    .grid {
      padding-left: 0 !important;
      padding-right: 0 !important;
    }
  }
</style>