---
import Layout from '../layouts/Layout.astro';
---

<Layout title="PT Global Niaga Sakti - Industrial Solutions Partner" description="Your trusted partner for industrial solutions">
  <div class="min-h-[calc(100vh-396px)] bg-white">
    <!-- Hero Section with Full-width Image -->
    <div class="relative">
      <!-- Full-width background image -->
      <div class="w-full h-[600px] relative">
        <img 
          src="/images/home/Sea.png"
          alt="Industrial Solutions"
          class="w-full h-full object-cover"
          loading="eager"
        />
        <!-- Dark overlay for better text readability -->
        <div class="absolute inset-0 bg-gradient-to-r from-primary-1 to-transparent opacity-80"></div>
      </div>

      <!-- Overlay Content -->
      <div class="absolute inset-0">
        <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-12 h-full">
          <div class="grid grid-cols-1 lg:grid-cols-2 h-full items-center">
            <!-- Left Column - Text -->
            <div class="flex flex-col justify-center text-white">
              <div class="max-w-[600px]">
                <h2 class="text-[28px] sm:text-[32px] md:text-[40px] font-bold leading-tight mb-8">
                  Your trusted partner for<br />
                  industrial solutions,<br />
                  delivering precision, speed,<br />
                  and excellence<br />
                  to meet your needs.
                </h2>
                <a 
                  href="/contact" 
                  class="inline-block px-8 py-3 bg-white text-primary-1 rounded-lg 
                         text-[20px] font-bold hover:bg-gray-100 transition-colors
                         shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 
                         transition-transform duration-200"
                >
                  Contact Us →
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Content Below -->
    <div class="py-16 md:py-20">
      <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-12">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20">
          <!-- Left Column -->
          <div class="flex flex-col gap-12">
            <h2 class="text-[28px] sm:text-[32px] md:text-[40px] font-bold text-primary-1 text-justify">
              With PT Global Niaga Sakti, you don't just get a supplier, you gain a dedicated partner in driving your success forward.
            </h2>
            <div class="w-full max-w-[80%] mx-auto">
              <img 
                src="/images/home//MESPAS.png"
                alt="MESPAS"
                class="w-full object-contain rounded-lg"
                loading="lazy"
              />
            </div>
          </div>

          <!-- Right Column -->
          <div class="flex flex-col gap-8">
            <!-- Services Box -->
            <div class="bg-gray-50 p-8 lg:p-10 rounded-xl border-2 border-primary-3">
              <h3 class="text-[32px] md:text-[36px] font-bold text-primary-1 text-center mb-4">
                Our Services
              </h3>
              <p class="text-[16px] leading-relaxed text-primary-1 text-justify mb-6">
                We offer comprehensive industrial solutions tailored to meet your specific needs. From engineering services to product supplies, our team ensures excellence in every aspect of our service delivery.
              </p>
              <div class="text-center">
                <a href="/services" class="inline-flex items-center text-primary-1 group">
                  <span class="text-[18px] font-medium group-hover:underline">See More</span>
                  <span class="ml-2">→</span>
                </a>
              </div>
            </div>

            <!-- Customers Box -->
            <div class="bg-gray-50 p-8 lg:p-10 rounded-xl border-2 border-primary-3">
              <h3 class="text-[32px] md:text-[36px] font-bold text-primary-1 text-center mb-4">
                Our Customers
              </h3>
              <p class="text-[16px] leading-relaxed text-primary-1 text-justify mb-6">
                We take pride in serving industry leaders across various sectors. Our commitment to excellence has earned us the trust of numerous prestigious organizations who rely on our solutions.
              </p>
              <div class="text-center">
                <a href="/customers" class="inline-flex items-center text-primary-1 group">
                  <span class="text-[18px] font-medium group-hover:underline">See More</span>
                  <span class="ml-2">→</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  img {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }

  @media (max-width: 1024px) {
    .from-primary-1 {
      --tw-gradient-from: rgb(6 13 85 / 0.9);
    }
  }
</style>