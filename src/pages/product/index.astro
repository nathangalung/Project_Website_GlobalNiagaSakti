---
import Layout from '../../layouts/Layout.astro';

const products = [
{
    title: 'Engine Supplies',
    image: '/images/product/Engine.png'
  },
  {
    title: 'Safety Equipment',
    image: '/images/product/Safety.png'
  },
  {
    title: 'Electric Supplies',
    image: '/images/product/Electric.png'
  },
  {
    title: 'Deck Supplies',
    image: '/images/product/Deck.png'
  },
  {
    title: 'Cabin Supplies',
    image: '/images/product/Cabin.png'
  },
  {
    title: 'Medical Store Supplies',
    image: '/images/product/Medical.png'
  },
  {
    title: 'Safety Lubricants and Calibration',
    image: '/images/product/Lubricants.png'
  },
  {
    title: 'Sealing Element',
    image: '/images/product/Sealing.png'
  }
  
];
---

<Layout title="Our Products - PT Global Niaga Sakti" description="Explore our range of high-quality marine products">
  <div class="min-h-[calc(100vh-396px)] bg-white py-6 sm:py-8 md:py-12">
    <div class="max-w mx-auto px-[10%] space-y-8">
      <!-- Heading -->
      <h1 class="text-h5 sm:text-h4 md:text-h3 text-primary-1 text-center mb-2 sm:mb-8 md:mb-12">
        Explore our range of high-quality products designed to meet the needs of diverse industries.
      </h1>

      <div class="flex flex-col gap-8">
        {/* First 6 products */}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 w-full">
          {products.slice(0, 6).map(product => (
            <div class="bg-gray-50 rounded-xl overflow-hidden flex flex-col shadow-lg hover:shadow-xl transition-shadow h-[275px]">
              <div class="p-6 flex items-center justify-center h-[180px] bg-primary-2/20">
                <img 
                  src={product.image} 
                  alt={product.title}
                  class="max-w-[90%] max-h-[90%] object-contain transform scale-150"
                  loading="lazy"
                />
              </div>
              <div class="bg-primary-1 text-white p-4 flex-1 flex flex-col items-center justify-center">
                <h4 class="text-body1 sm:text-h5 md:text-h4 text-center">
                  {product.title}
                </h4>
              </div>
            </div>
          ))}
        </div>

        {/* Last 2 products - centered */}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-[1fr_auto_1fr] gap-8 w-full">
          <div class="hidden lg:block"></div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:col-start-2 md:max-w-[850px]">
            {products.slice(6, 8).map(product => (
              <div class="bg-gray-50 rounded-xl overflow-hidden flex flex-col shadow-lg hover:shadow-xl transition-shadow h-[275px]">
                <div class="p-6 flex items-center justify-center h-[180px] bg-primary-2/20">
                  <img 
                    src={product.image} 
                    alt={product.title}
                    class="max-w-[90%] max-h-[90%] object-contain transform scale-150"
                    loading="lazy"
                  />
                </div>
                <div class="bg-primary-1 text-white p-4 flex-1 flex flex-col items-center justify-center">
                  <h4 class="text-body1 sm:text-h5 md:text-h4 text-center">
                    {product.title}
                  </h4>
                </div>
              </div>
            ))}
          </div>
          <div class="hidden lg:block"></div>
        </div>

        <h3 class="text-h5 sm:text-h4 md:text-h3 text-primary-1 text-center md:mt-4">
          and as per client request
        </h3>
      </div>
    </div>
  </div>
</Layout>

<style>
  img {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }
</style>